{
    "version": 1.0,
    "ci": {
        "nodes": [
            "windows",
            "centos7"
        ],
        "alias": {
            "linux": [
                "centos7"
            ]
        },
        "gates": {
            "checkin": [
                "build"
            ],
            "rolling": [
                "build"
            ]
        },
        "workflow": {
            "build": {
                "nodes": {
                    "linux": [
                        {
                            "cmd": "bash ./docker-build.sh",
                            "artifactList": [
                                "**/r-*.tar.gz"
                            ],
                            "recycle": false
                        },
                        {
                            "cmd": "tar -zxf ./r-linux.tar.gz",
                            "artifactList": [ ],
                            "recycle": false
                        },
                        {
                            "cmd": "bash ./test/utils/runAllTests.sh",
                            "artifactList": [
                                "*.html",
                                "*.txt",
                                "*.log"
                            ],
                            "recycle": false
                        }
                    ],
                    "windows": [
                        {
                            "cmd": "powerShell.exe -ExecutionPolicy Bypass -file build.ps1",
                            "artifactList": [
                                "MRO-win.exe"
                            ],
                            "recycle": false
                        }
                    ]
                }
            }
		}
    }
}
